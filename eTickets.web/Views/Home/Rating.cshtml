@model RatingDto
@{
	ViewBag.Homeactiv = "Homeactiv";
}

<br />
<div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15 card">
	<!--begin:Form-->
	<form class="form" asp-action="Rating" >
		<input  asp-for="Id" type="hidden"/>
		<!--begin::Heading-->
		<div class="mb-13 text-center">
			<!--begin::Title-->
			<h1 class="mb-3">Movie Rating</h1>
			<!--end::Title-->
			<!--begin::Description-->
			<div class="text-muted fw-semibold fs-5">
				Please enter valid data
			</div>
			<!--end::Description-->
		</div>
		<!--end::Heading-->
		<!--begin::Input group-->
		<div class="row ">
			<div class="col-md-8 container-fluid">
				<div class="d-flex flex-column mb-8 fv-row">
					<!--begin::Label-->
					<label class="d-flex align-items-center fs-6 fw-semibold mb-2" asp-for="NumberOfStars">
					</label>
					<!--end::Label-->
					<input asp-for="NumberOfStars" class="form-control form-control-solid" type="text" placeholder="Enter Movie Rating" />
					<span asp-validation-for="NumberOfStars" class="text-danger"></span>
				</div>
			</div>

		</div>
		<!--begin::Actions-->
		<div class="text-center">
			<a type="reset" href="~/Home/Index" id="kt_modal_new_target_cancel" class="btn btn-light me-3">Cancel</a>
			<input type="submit" id="kt_modal_new_target_submit" class="btn btn-primary">
			<span class="indicator-progress">
				Please wait...
				<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
			</span>
			</input>
		</div>
		<!--end::Actions-->
	</form>
	<!--end:Form-->
</div>