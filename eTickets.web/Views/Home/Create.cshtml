<!--begin::Body-->
<body id="kt_body" class="app-blank bgi-size-cover bgi-position-center">
	<br />
	<br />
	<div class="modal-body scroll-y px-10 px-lg-15 pt-0 pb-15">
		<!--begin:Form-->
		<div class="col-md-8 container-fluid">
			<form class="form" asp-action="Create" enctype="multipart/form-data">
				<input value="hi" type="hidden" asp-for="Name" />
				<!--begin::Heading-->
				<div class="mb-13 text-center">
					<!--begin::Title-->
					<h1 class="mb-3">Sign UP</h1>
					<!--end::Title-->
					<!--begin::Description-->
					<div class="text-muted fw-semibold fs-5">
						Please enter valid data
					</div>
					<!--end::Description-->
				</div>
				<!--end::Heading-->
				<!--begin::Input group-->

				<div class="row">
					<div class="col-md-4">
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2">
								<span class="required">Name</span>
							</label>
							<!--end::Label-->
							<input asp-for="User.FullName" class="form-control form-control-solid" placeholder="Enter Full Name" />
						</div>
					</div>

					<div class="col-md-4">
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2">
								<span class="required">BirthDay</span>
							</label>
							<!--end::Label-->
							<input asp-for="DOB" class="form-control form-control-solid" placeholder="Enter Birth Day" />
						</div>
					</div>

					<div class="col-md-4">
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2">
								<span class="required">Image </span>
							</label>
							<!--end::Label-->
							<input asp-for="ImageURl" class="form-control form-control-solid" placeholder="Enter Image" />
						</div>
					</div>
				</div>

				<div class="row">


					<div class="col-md-6">
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2">
								<span class="required">Gender</span>
							</label>
							<!--end::Label-->
							<select asp-for="Gender" class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-placeholder="Select a Gender">
								<option value="@Gender.male">male</option>
								<option value="@Gender.female">female</option>
							</select>
						</div>
					</div>

					<div class="col-md-6">
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2">
								<span class="required">phone Number</span>
							</label>
							<!--end::Label-->
							<input asp-for="User.PhoneNumber" class="form-control form-control-solid" placeholder="Enter Your Phone Number" />
						</div>
					</div>


				</div>

				<div class="row">

					<div class="col-md-12">
						<div class="d-flex flex-column mb-8 fv-row">
							<!--begin::Label-->
							<label class="d-flex align-items-center fs-6 fw-semibold mb-2">
								<span class="required">Email</span>
							</label>
							<!--end::Label-->
							<input asp-for="User.Email" class="form-control form-control-solid" placeholder="Enter Email" />
						</div>
					</div>
				</div>
				<!--begin::Actions-->
				<div class="text-center">
					<a type="reset" href="~/Identity/Account/Login" id="kt_modal_new_target_cancel" class="btn btn-light me-3">Cancel</a>
					<input type="submit" id="kt_modal_new_target_submit" style="color : #FFF" class="btn btn-primary text-hover-dark ">
					<span class="indicator-progress">
						Please wait...
						<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
					</span>
					</input>
				</div>
				<!--end::Actions-->
